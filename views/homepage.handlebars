<div id="Blog Posts">
    <h2>Remarked Public Posts</h2>
    {{#each post in posts}}
    <div class="postCard">
        <div class="titleBlock">
            <h3>${post.title}</h3>
        </div>
        <div class="postBody">
            <p>${post.body}</p>
        </div>
        <div class="footer">
            <h4>Posted by ${req.session.username} on ${req.}</h4>
        </div>
    </div>
    {{//each}}
</div>
